<h2>Books</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to(user_path(book.user_id)) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <p><%= book.title %></p>
        <% end %>
      </td>
      <td>
        <p><%= book.body %></p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>